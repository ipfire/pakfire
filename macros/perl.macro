# Perl constants.
perl = /usr/bin/perl

perl_sitearch   = %(eval "$(%{perl} -V:installsitearch)";   echo ${installsitearch})
perl_sitelib    = %(eval "$(%{perl} -V:installsitelib)";    echo ${installsitelib})
